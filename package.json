{
  "name": "anime-site",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --max-warnings 0 --fix",
    "preview": "vite preview",
    "format": "prettier . --ignore-path ./gitignore --write",
    "fix-style": "npm run format & npm run lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "classnames": "^2.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.0.8"
  },
  "devDependencies": {
    "@mate-academy/eslint-config-react": "^0.0.11",
    "@mate-academy/eslint-config-react-typescript": "^1.0.13",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.5.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "3.1.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*": "npm run format",
    "*.ts": "npm run fix-style",
    "*.tsx": "npm run fix-style"
  }
}
